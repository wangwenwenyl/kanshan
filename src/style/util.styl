/**
 * @Desc 工具class
 */

/* 可点击 */
.clickable
  cursor pointer

/* 子元素垂直居中 */
.vertical-center
  display flex
  align-items center

/* 水平垂直居中 */
.center
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

/* 左浮动 */
.float-left 
  float left !important

/* 右浮动 */
.float-right
  float right !important

/* 清除浮动 */
.clear-float
  zoom: 1
  &:after
    content: '.'
    display: block
    clear: both
    height: 0
    visibility: hidden

/* 不换行 */
.no-wrap
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

/* 浮层 */
.mask
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 9999
  background-color rgba(0, 0,0, .8)

/* 填满父元素高度 */
.fill-height
  height 100%

/* 填满父元素宽度 */
.fill-width
  width 100%  

/* 填满父元素宽高 */
.fill
  width 100%
  height 100%

/* 鼠标移入呈现透明度 */
.hover-light
  &:hover
    opacity .7

/* 适配 */
.grid
  width 1540px
@media screen and (max-width 1600px) 
  .grid 
    width 1060px    